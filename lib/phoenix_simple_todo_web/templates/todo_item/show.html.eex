<h1>Show Todo item</h1>

<ul>

  <li>
    <strong>Text:</strong>
    <%= @todo_item.text %>
  </li>
  <li>
    <strong>Category:</strong>
    <%= category_name(@todo_item) %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.todo_item_path(@conn, :edit, @todo_item) %></span>
<span><%= link "Back", to: Routes.todo_item_path(@conn, :index) %></span>
